@model Upload_Utility.Models.SheetDetails

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Upload & Edit Google Sheets</h3>

<form method="post">
    <div>
        @Html.TextBoxFor(m => m.SheetURL, new { placeholder = "Enter Sheet URL" })
        <button> Read Google Sheets</button>
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Class</th>
                    <th>State</th>
                    <th>Major</th>
                    <th>Activity</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model!=null && Model.SheetMetaData!=null && Model.SheetMetaData.Count > 0)
                    {
                        foreach (var item in Model.SheetMetaData)
                        {
                            <tr>
                                <td>@item.StudentName</td>
                           
                                <td>@item.Gender</td>
                          
                                <td>@item.Class</td>
                            
                                <td>@item.State</td>
                          
                                <td>@item.Major</td>
                           
                                <td>@item.Activity</td>
                            </tr>
                       }
                    }
                }
            </tbody>
        </table>
    </div>
</form>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/uploadDoc")